@model UmschulungConfig
@{
    ViewData["Title"] = "Wochennachweis-Generator";
}

<div class="container">
    <h1 class="my-4 text-center">Wochennachweis-Generator</h1>

    @if (TempData["StatusMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["StatusMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Grunddaten</h5>
        </div>
        <div class="card-body">
            <form asp-action="Generate" method="post">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Umschulungsbeginn" class="form-label">Beginn der Umschulung/des Praktikums</label>
                            <input asp-for="Umschulungsbeginn" class="form-control" type="date" required />
                            <span asp-validation-for="Umschulungsbeginn" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Klasse" class="form-label">Klasse/Kurs</label>
                            <input asp-for="Klasse" class="form-control" required />
                            <span asp-validation-for="Klasse" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Nachname" class="form-label">Nachname</label>
                            <input asp-for="Nachname" class="form-control" required />
                            <span asp-validation-for="Nachname" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Vorname" class="form-label">Vorname</label>
                            <input asp-for="Vorname" class="form-control" required />
                            <span asp-validation-for="Vorname" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Definierte Zeiträume</h5>
                        <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#zeitraumModal">
                            <i class="bi bi-plus-circle"></i> Neuen Zeitraum hinzufügen
                        </button>
                    </div>
                    <div class="card-body">
                        @if (!Model.Zeitraeume.Any())
                        {
                            <div class="alert alert-info">
                                Es wurden noch keine Zeiträume definiert. Bitte fügen Sie mindestens einen Zeitraum hinzu.
                            </div>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th>Kategorie</th>
                                            <th>Von</th>
                                            <th>Bis</th>
                                            <th>Beschreibung</th>
                                            <th>Aktion</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 0; i < Model.Zeitraeume.Count; i++)
                                        {
                                            <tr>
                                                <td>@Model.Zeitraeume[i].Kategorie</td>
                                                <td>@Model.Zeitraeume[i].Start.ToString("dd.MM.yyyy")</td>
                                                <td>@Model.Zeitraeume[i].Ende.ToString("dd.MM.yyyy")</td>
                                                <td>@Model.Zeitraeume[i].Beschreibung</td>
                                                <td>
                                                    <form asp-action="DeleteZeitraum" method="post">
                                                        <input type="hidden" name="index" value="@i" />
                                                        <button type="submit" class="btn btn-danger btn-sm">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    </form>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>
                </div>

                <div class="text-center mb-5">
                    <button type="submit" class="btn btn-success btn-lg"
                            disabled="@(!Model.Zeitraeume.Any())">
                        <i class="bi bi-file-earmark-word"></i> Wochennachweise generieren
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal für neuen Zeitraum -->
<div class="modal fade" id="zeitraumModal" tabindex="-1" aria-labelledby="zeitraumModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="AddZeitraum" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="zeitraumModalLabel">Neuen Zeitraum hinzufügen</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Formularfelder für ggf. bestehende Daten -->
                    <input type="hidden" asp-for="Umschulungsbeginn" />
                    <input type="hidden" asp-for="Nachname" />
                    <input type="hidden" asp-for="Vorname" />
                    <input type="hidden" asp-for="Klasse" />

                    <div class="mb-3">
                        <label asp-for="NeuZeitraum.Kategorie" class="form-label">Kategorie</label>
                        <select asp-for="NeuZeitraum.Kategorie" class="form-select">
                            <option value="Umschulung">Umschulung</option>
                            <option value="Praktikum">Praktikum</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label asp-for="NeuZeitraum.Start" class="form-label">Startdatum</label>
                        <input asp-for="NeuZeitraum.Start" type="date" class="form-control" required />
                        <span asp-validation-for="NeuZeitraum.Start" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="NeuZeitraum.Ende" class="form-label">Enddatum</label>
                        <input asp-for="NeuZeitraum.Ende" type="date" class="form-control" required />
                        <span asp-validation-for="NeuZeitraum.Ende" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="NeuZeitraum.Beschreibung" class="form-label">Beschreibung</label>
                        <input asp-for="NeuZeitraum.Beschreibung" class="form-control" required
                               placeholder="z.B. Modul HTML/CSS, Praktikum bei Firma XYZ" />
                        <span asp-validation-for="NeuZeitraum.Beschreibung" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Abbrechen</button>
                    <button type="submit" class="btn btn-primary">Hinzufügen</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Validierung für den Modal-Dialog
            const modalForm = document.querySelector('#zeitraumModal form');
            const startInput = document.querySelector('#NeuZeitraum_Start');
            const endeInput = document.querySelector('#NeuZeitraum_Ende');

            modalForm.addEventListener('submit', function(e) {
                const startDate = new Date(startInput.value);
                const endDate = new Date(endeInput.value);

                if (endDate < startDate) {
                    e.preventDefault();
                    alert('Das Enddatum muss nach dem Startdatum liegen.');
                }
            });
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
