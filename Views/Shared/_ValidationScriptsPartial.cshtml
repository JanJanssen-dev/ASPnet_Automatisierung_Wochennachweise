@*
    Validation Scripts - Minimale Version
    Verwendet nur Browser-eigene HTML5-Validation
*@

<script>
    console.log('📋 Validation Scripts: Browser-eigene HTML5-Validation aktiv');

    // Optional: Einfache Client-seitige Validation-Verbesserung
    document.addEventListener('DOMContentLoaded', function() {
        const forms = document.querySelectorAll('form');
        forms.forEach(function(form) {
            form.addEventListener('submit', function(event) {
                // Browser-eigene Validation
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();

                    // Zeige erste ungültige Eingabe an
                    const firstInvalid = form.querySelector(':invalid');
                    if (firstInvalid) {
                        firstInvalid.focus();
                        firstInvalid.reportValidity();
                    }
                }

                form.classList.add('was-validated');
            });
        });

        console.log('✅ Einfache Form-Validation aktiviert');
    });
</script>